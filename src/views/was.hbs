{{#if admin}}
<p>
    <a class="link-add" href="/add-was">add-content</a>
</p>
{{/if}}
{{#each was}}
<div>
    <h4>{{title}}</h4>
    <hr>
    <p>
        <b>
            <i>
                {{synopsis}}
            </i>
        </b>
    </p>
    <p>
        {{description}}
    </p>
    {{#if ../admin}}
    <div class="href">
        <p>
            <a class="link-delete" href="/delete/was/{{_id}}">delete</a>
        </p>
        <p>
            <a class="link-edit" href="/edit/was/{{_id}}">edit</a>
        </p>
    </div>
    {{/if}}
</div>
{{else}}
<h1>Kein Artikeles noch</h1>
{{/each}}